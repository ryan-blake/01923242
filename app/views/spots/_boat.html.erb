<%= form_for(spot) do |f| %>

  <% if spot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(spot.errors.count, "error") %> prohibited this job from being saved:</h2>
      <ul>
      <% spot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

     <div class="form-group">
       <%= f.label :term %>
       <%= f.collection_select :term_id, Term.all, :id, :name, class: 'form-control' %>
       </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
<strong> Address released to Users after payment is received. </strong>
  <div class="field">
     <%= f.label :address %><br/>
     <%= f.text_field :address %><br/>
   </div>

   <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
   </div>
   <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
   </div>
   <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.number_field :zipcode %>
   </div>


  <div class="field">
    <%= f.label :length %><strong> Bow to Stern </strong><br/>
   <%= f.number_field :length %>
  </div>

  <div class="field">
    <p> Max Width: Port to Starboard </p>
    <%= f.label :width %><br/>
   <%= f.number_field :width %>
  </div>

  <div class="field">
    <p> Max depth: for keel / hull </p>
    <%= f.label :depth %><br/>
   <%= f.number_field :depth %>
  </div>

  <div class="field">
    <p> price per day <p>
    <%= f.label :price %><br/>
   <%= f.number_field :price %>
  </div>

  <div class="field">
    <p> image <p>
    <%= f.label :spot_image %><br/>
   <%= f.file_field :spot_image %>
  </div>




  </br>


  <div class="actions">
    <%= f.hidden_field :user_id, :value => @user.id %>


    <%= f.submit %>
  </div>
  <% end %>
