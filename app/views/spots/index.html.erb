<% unless user_signed_in? %>
<% content_for :top_content do %>
  <div class="jumbotron">
    <div class="container">
      <h1>Welcome!</h1>
      <p>Register to get started.</p>
      <p>
        <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
      </p>
    </div>
  </div>
 <% end %>
<% else %>
<div class="text-centered">
<h1> Welcome!</h1>
<% unless current_user.provider == nil %>
<button class="success btn-sm">
 <%= link_to 'Create new listing', new_spot_path %>
</button>
<% end %>

</div>
<hr>

<%  @spots.each do |i| %>
<div class="col-lg-6">
 <div class="well well-lg">
  <table>
  <tr>
    <h3><%=link_to i.title, i %></h3>
    <% if i.spot_image_file_name == nil %>
   <td><h4><%=image_tag("#{i.image_url}", :size => "120x120", alt: "Example Image")%></td></h4>
   <% else %>
    <td><h4> <%=link_to image_tag i.spot_image(:square) %> </h4></td>
    <% end %>
    <td style="padding-left: 10px"><%=i.description.truncate(59)%></td>
    <td style="padding-left: 15px;"><strong>price:  </strong> $<%= i.price%>
     <strong>Length:  </strong><%= i.length%>ft.
    </td>
    <td><strong> Covered: </strong><% if i.covered == true %> Yes <%else%> No <% end %>
  <tr>
  </table>
  <% if @user.role == admin %>
  <%= link_to "edit", edit_job_path(@spot), class: "btn btn-primary" %>
<%= button_to "delete", @spot, :method=>:delete, :class=>:destroy %>
<% end %>
 </div>
</div>
<% end %>
<% end %>
